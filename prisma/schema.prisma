// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./db.db"
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  title     String
  summary   String
  link      String   @unique
  archive   String
  content   String
  tags      Tag[]
  watch     Int      @default(0)
  likes     Int      @default(0)
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  articles Article[]
}

model About {
  id       Int      @id @default(0)
  updateAt DateTime @updatedAt
  content  String
}
